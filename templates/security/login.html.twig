{# {% extends 'base.html.twig' %} #}


{% block title %}{% endblock %}

{% block body %}

<body>
<div class="container" id="form">
<form method="post" id="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div id="title">
        <p id="welcome">WELCOME </p>
    </div>

    <div id="login">
        <p id="userlogin">USER LOGIN </p>
    </div>

    <div id="User">
        <div>
            <label for="inputUsername">Username</label>
        </div>
        <div>
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus style="margin-bottom: 2% " >
        </div>
    </div>

    <div id="pass">
        <div>
            <label for="inputPassword">Password</label>
        </div>
        <div>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >


    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div id="button">
        <button  type="submit" id="submit">
            Sign in
        </button>
    </div>
    <br></br>
    <div id="regis">
        <lable id="lable" style="font-family:Helvetica;">Don't have an account?</lable> <a href="{{path('app_register')}}" id="register" style="font-family:Helvetica;">Sign up</a>
    </div>
    
</form>
</div>

</body>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('css/adminlogin.css')}}"/>
{% endblock %}


