{% extends 'base.html.twig' %}

{% block title %}Hello SanPham!{% endblock %}

{% block body %}

<a href="{{path('app_logout')}}" class="btn btn-danger" style="float:right; "> Logout</a>
<a href="{{path('app_san_pham')}}" class="btn btn-primary" style="float:right;margin-right: 5px "> Add</a> 


<div class="container">

    <table class="table" style="text-align: center"
        <thead>
            <tr >
                <td> STT </td>
                <td> Code Poduct </td>
                <td> Photo </td>
                <td> Name Poduct </td>
                <td> Price </td>
                <td> Act </td>
            </tr>
         </thead>

         <tbody>
            {% for sp in data %}
                <tr>
                    <td>{{loop.index}}</td>
                    <td>{{sp.getId()}}</td>
                    <td><img src="{{asset('uploads/sanpham/' ~ sp.getPhoto())}}" height="150" /></td>
                    <td>{{sp.getName()}}</td>
                    <td>{{sp.getGia()}}</td>
                    <td>
                        <a href="{{path('app_edit_san_pham',{'id':sp.getId()})}}" class="btn btn-danger"> Edit</a>
                        <a href="javascript:deletesp('{{path('app_delete_san_pham',{'id':sp.getId()})}}')" class="btn btn-warning"> Delete</a> 
                        
                    </td>
                </tr>
             {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
{% block javascripts %}
<script>
    function deletesp(url){
        if(confirm("Do you delete product?")){
            window.location.href = url;
        }
    }
</script>
{% endblock %}